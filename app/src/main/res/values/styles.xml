<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Text Style-->
    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextTitleLarge" parent="TextStyle">
        <item name="android:textSize">@dimen/material_text_title</item>
        <item name="android:textColor">@color/navy_blue_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitleNormal" parent="TextStyle">
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:textColor">@color/navy_blue_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContentNormal" parent="TextStyle">
        <item name="android:textSize">@dimen/material_text_menu</item>
        <item name="android:textColor">@color/gray_60</item>
    </style>

    <style name="TextContentLarge" parent="TextStyle">
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:textColor">@color/gray_60</item>
    </style>

    <!--Button Style-->
    <style name="ButtonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonYellowRound" parent="ButtonStyle">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:background">@drawable/bg_round_yellow_state</item>
        <item name="android:textColor">@color/navy_blue_dark</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonBorderless" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:textStyle">bold</item>
    </style>

    !--EditText Style-->
    <style name="EditTextTheme" parent="Base.Widget.AppCompat.EditText">
        <item name="android:colorControlNormal">@color/gray_30</item>
        <item name="android:colorControlActivated">@color/yellow_bright</item>
        <item name="android:colorControlHighlight">@color/yellow_bright</item>
    </style>

    <style name="EditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/EditTextTheme</item>
    </style>

    <style name="EditTextSingleLine" parent="EditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/EditTextTheme</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/gray_30</item>
    </style>

    <style name="EditTextNoUnderLine" parent="EditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/navy_blue_dark</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ViewLineGray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_30</item>
    </style>
</resources>
